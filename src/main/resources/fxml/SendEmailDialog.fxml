<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pgv.controllers.SendEmailController" hgap="10" vgap="10" style="-fx-padding: 20;">
    <Label text="To:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="toField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Subject:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="subjectField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Body:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextArea fx:id="bodyField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.rowSpan="2" style="-fx-pref-height: 200px;"/>
    <Button text="Send" onAction="#handleSend" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</GridPane>